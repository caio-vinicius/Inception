server {
    listen 443 ssl default_server;
    listen [::]:443 ssl default_server;
    ssl_certificate /etc/nginx/certs/cert.pem;
    ssl_certificate_key /etc/nginx/certs/key.pem;
    ssl_protocols TLSv1.3;
    # root /var/www/html;
    root /app/wordpress;
    index index.php;
    server_name _;
    location ~ \.php$ {
    	fastcgi_pass wordpress:9000;
	try_files $uri =404;
    }
}

server {
    listen 80;
    listen [::]:80;
    return 301 https://$host$request_uri;
}

